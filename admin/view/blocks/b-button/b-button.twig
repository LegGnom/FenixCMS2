{#
	title

	options.class
#}
{% macro bButton(title, options, attrib) %}
	{% from 'blocks/i-attr/i-attr.twig' import iAttr %}

	{% set class = ['b-button'] %}
	{% set type = 'button' %}

	{% if options.class %}
		{% set class = class|merge([options.class]) %}
	{% endif %}

	{% if options.type %}
		{% set type = options.type %}
	{% endif %}

	{% if not attrib %}
		{% set attrib = {} %}
	{% endif %}

	<button {{ iAttr({
		class: class|join(' '),
		type: type
	}|merge(attrib)) }}>
		{{ title|raw }}
	</button>
{% endmacro %}